{% extends "_layout" %}

{% block content %}
{% include "_include/header" %}
<div class="container"> 
  <!--======== Banner Image ========-->
  <section class="service-single">
    <div class="row">
    {% set entries = craft.entries().indivisualService(':notempty:').all() %}
        {% if entries|length %}
        {% for block in entry.indivisualService %}
        {% if block.type == 'pagebanner'%}
        {% set bannerimg = block.indbanner.first() %}
      <div class="col-12"> <img class="img-responsive" src="{{bannerimg.url}}"/> </div>
      {% endif %}
      {% endfor %}
      {% endif %}
    </div>
  </section>
  <!--======== Service Single Content ========-->
  <section class="service-bio-single">
    <div class="row padding">
      <div class="col-6 s-left-content">
      {% for block in entry.indivisualService %}
      {% if block.type == 'intro'%}
        <h2 class="service-single-title">{{ block.introTite}}</h2>
        <p>{{block.introDescription}}</p>
      {% endif %}
      {% endfor %}
      </div>
      <div class="col-6">
        <div class="service-side-form"> 
          <h3 class="form-bg-text">Enquire about Individual and <br/> In-Home Services</h3>
          {% include "_singles/indivisual-service-form.twig" %}
          </div>
      </div>
    </div>
  </section>
  <!--======== Bio Listing =========-->
  <section class="service-bio-column">
    <div class="row padding">
    {% for block in entry.indivisualService %}
    {% if block.type == 'supportingWay' %}
      <div class="col-12">
        <h2>{{block.support1Title}} </h2>
      </div>
      <div class="col-6">
        <h4 class="service-sub-title">{{block.support2Description}}</h4>
        <ul>
          <li>{{block.point1}}</li>
          <li>{{block.point2}}</li>
          <li>{{block.point3}}</li>
          <li>{{block.point4}}</li>
          <li>{{block.point5}}</li>
          <li>{{block.point6}}</li>
          <li>{{block.point7}}</li>
        </ul>
      </div>
      {% endif %}
    {% endfor %}
      <div class="col-6">
        {% for block in entry.indivisualService %}
        {% if block.type == 'supportingway2' %}
        <h4 class="service-sub-title">{{block.subtitle}}</h4>
        <ul>
          <li>{{block.point1}}</li>
          <li>{{block.point2}}</li>
          <li>{{block.point3}}</li>
          <li>{{block.point4}}</li>
          <li>{{block.point5}}</li>
          <li>{{block.point6}}</li>
          <li>{{block.point7}}</li>
        </ul>
      </div>
      {% endif %}
      {% endfor %}
    </div>
    
    
  </section>
  <!--======== Optional SEO Copy =========-->
  <section class="optional-copy">
    <div class="row padding">
    {% for block in entry.indivisualService %}
        {% if block.type == 'optionalseocopy' %}
      <div class="col-12 column-content">
      <h2 class="SEO-title">{{block.seotitle}}</h2>
        	<p>{{block.seodescription}}</p>
      </div>
      {% endif %}
      {% endfor %}
    </div>
  </section>
  <!--======== End ========--> 
  
</div>
</div>
{% include "_include/footer" %}

{% endblock %}